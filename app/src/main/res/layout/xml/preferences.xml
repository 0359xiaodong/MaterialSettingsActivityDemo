<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout="@layout/preference_item"
    android:title="@string/title_activity_setting">
    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="人性化自由选择">

        <CheckBoxPreference
            android:layout="@layout/preference_item"
            android:title="贝壳通知栏单词处于最高位置"
            android:key="@string/notify_priority"
            android:summaryOn="当前为最高位置"
            android:summaryOff="当前为最低位置(默认)"
            android:defaultValue="false">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:layout="@layout/preference_item"
            android:title="在通知栏显示音标"
            android:key="@string/notify_with_phonetic"
            android:summaryOn="当前为显示"
            android:summaryOff="当前为不显示"
            android:defaultValue="false">
        </CheckBoxPreference>
        <CheckBoxPreference
            android:layout="@layout/preference_item"
            android:title="全局复习小吐司"
            android:key="@string/notify_with_toast"
            android:summaryOff="当前为关闭。\n开启后会在你使用其他 APP 的时，定时弹出可爱的小『吐司』，不会妨碍你的触摸和点击事件，打扰性非常低，但却能很高效地无压力复习单词。"
            android:summaryOn="当前为开启。\n开启后会在你使用其他 APP 的时，定时弹出可爱的小『吐司』，不会妨碍你的触摸和点击事件，打扰性非常低，但却能很高效地无压力复习单词。"
            android:defaultValue="true">
        </CheckBoxPreference>
        <ListPreference
            android:layout="@layout/preference_item"
            android:dependency="@string/notify_with_toast"
            android:key="toast_interval_time"
            android:title="吐司弹出间隔时间"
            android:summary="设置"
            android:entries="@array/list_entries"
            android:entryValues="@array/list_entries_value"
            android:dialogTitle="设置间隔时间"
            >
        </ListPreference>
        <Preference
            android:key="toast_market"
            android:layout="@layout/preference_item_with_new"
            android:title="@string/title_activity_toast_market"
            android:summary="修改吐司的背景图片和字体等等">
            <intent android:action="me.drakeet.seashell.action.TOAST_MARKET"/>
        </Preference>
        <CheckBoxPreference
            android:layout="@layout/preference_item"
            android:title="通知栏消息字体颜色"
            android:key="@string/notify_with_color"
            android:summaryOff="当前为黑色"
            android:summaryOn="当前为白色"
            android:defaultValue="true">
        </CheckBoxPreference>
        <CheckBoxPreference
            android:layout="@layout/preference_item"
            android:title="开机自启动"
            android:summaryOn="@string/xiaomi_attention"
            android:summaryOff="@string/xiaomi_attention"
            android:defaultValue="true">
        </CheckBoxPreference>
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="帮助">
        <Preference
            android:layout="@layout/preference_item"
            android:key="@string/action_feedback"
            android:title="我的反馈"
            android:summary="@string/feedback_summary"
            />
        <Preference
            android:layout="@layout/preference_item"
            android:title="关于">
            <intent android:action="me.drakeet.seashell.action.ABOUT"/>
        </Preference>

        <Preference
            android:layout="@layout/preference_item"
            android:title="手动检查更新">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://fir.im/seashell"/>
        </Preference>

        <Preference
            android:layout="@layout/preference_item"
            android:title="喜欢贝壳单词"
            android:summary="若你觉得贝壳单词很赞的话，麻烦点击此处到应用商店给个好评，非常感谢">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="market://details?id=me.drakeet.seashell"/>
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="感谢有你">

        <Preference
            android:layout="@layout/preference_item"
            android:key="@string/action_logout"
            android:title="退出登录"/>
    </PreferenceCategory>
</PreferenceScreen>